{
  "name": "tailwind-sandbox",
  "version": "1.0.0",
  "description": "Tailwind Sandbox",
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css,md,json,html}\""
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ],
    "printWidth": 120
  },
  "devDependencies": {
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.10"
  }
}
